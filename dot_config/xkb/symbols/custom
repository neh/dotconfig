// ENTHIUM BEGIN ////////////////////////////////////////
//
// Enthium - Engrammer meets Hands Down Promethium
//           https://github.com/sunaku/enthium
//
// ` 1 2 3 4 5 6 7 8 9 0 cl ra
//   ' = - . / X M G W Z
// B C I E A , K H T N S V
//   Q Y U O < J L D P F
//             R
//
// B displaces cl (Caps Lock).
// R displaces ra (Right Alt).
//
partial alphanumeric_keys
xkb_symbols "enthium"
{
	include "us(basic)"
        name[Group1]= "Enthium";

	key <AD01> { [   apostrophe,    quotedbl ] }; // 
	key <AD02> { [            x,           X ] }; // xX
	key <AD03> { [        comma,   semicolon ] }; // -_
	key <AD04> { [       period,       colon ] }; // .:
	key <AD05> { [        equal,        plus ] }; // =+
	key <AD06> { [        slash,   backslash ] }; // \/
	key <AD07> { [            l,           L ] }; // lL
	key <AD08> { [            d,           D ] }; // dD
	key <AD09> { [            w,           W ] }; // wW
	key <AD10> { [            v,           V ] }; // vV

	key <AC01> { [            c,           C ] }; // cC
	key <AC02> { [            i,           I ] }; // iI
	key <AC03> { [            e,           E ] }; // eE
	key <AC04> { [            a,           A ] }; // aA
	key <AC05> { [        minus,  underscore ] }; // ,;
	key <AC06> { [            k,           K ] }; // kK
	key <AC07> { [            h,           H ] }; // hH
	key <AC08> { [            t,           T ] }; // tT
	key <AC09> { [            n,           N ] }; // nN
	key <AC10> { [            s,           S ] }; // sS
	key <AC11> { [            z,           Z ] }; // zZ

	key <AB01> { [            b,           B ] }; // bB
	key <AB02> { [            y,           Y ] }; // yY
	key <AB03> { [            u,           U ] }; // uU
	key <AB04> { [            o,           O ] }; // oO
	key <AB05> { [     question,      exclam ] }; // /?
	key <AB06> { [            j,           J ] }; // jJ
	key <AB07> { [            m,           M ] }; // mM
	key <AB08> { [            g,           G ] }; // gG
	key <AB09> { [            p,           P ] }; // pP
	key <AB10> { [            f,           F ] }; // fF

	key <CAPS> { [            q,           Q ] }; // qQ
	key <AE11> { [         less              ] }; // <

	key <RALT> { [            r,           R ] }; // rR
	key <AE12> { [      greater              ] }; // >
};
// ENTHIUM END //////////////////////////////////////////
